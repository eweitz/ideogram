{
  "name": "ideogram",
  "version": "0.10.0",
  "description": "Chromosome visualization with D3.js",
  "main": "src/js/index.js",
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "preferGlobal": true,
  "bin": {
    "ideogram": "cli/ideo-cli.js"
  },
  "scripts": {
    "debugtest": "karma start --log-level debug --browsers Chrome karma.conf.js",
    "test": "karma start --single-run --browsers ChromeHeadless karma.conf.js",
    "debugbuild": "node scripts/prepublish.js; webpack -p --display-modules --display-reasons && mkdir -p dist/data && cp -r data/{bands,annotations} dist/data",
    "build": "node scripts/prepublish.js; webpack -p && mkdir -p dist/data && cp -r data/{bands,annotations} dist/data",
    "watch": "webpack --watch && mkdir -p dist/data && cp -r data/{bands,annotations} dist/data",
    "start": "webpack-dev-server --open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eweitz/ideogram.git"
  },
  "keywords": [
    "chromosome",
    "ideogram",
    "cytogenetics",
    "genomics",
    "visualization",
    "d3"
  ],
  "author": "Eric Weitz",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/eweitz/ideogram/issues"
  },
  "homepage": "https://github.com/eweitz/ideogram",
  "dependencies": {
    "commander": "*",
    "d3-array": "^1.2.0",
    "d3-brush": "^1.0.4",
    "d3-dispatch": "^1.0.3",
    "d3-request": "^1.0.6",
    "d3-scale": "^1.0.6",
    "d3-selection": "^1.1.0",
    "d3.promise": "^2.0.0",
    "es6-promise": "^4.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "chai": "^3.2.0",
    "coveralls": "^2.13.1",
    "eslint": "^4.6.1",
    "eslint-config-google": "^0.5.0",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^3.3.0",
    "istanbul-instrumenter-loader": "^3.0.0",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-coveralls": "^1.1.2",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^2.0.4",
    "lighthouse-ci": "git+https://github.com/ebidel/lighthouse-ci.git",
    "mocha": "^2.3.0",
    "webpack": "^3.5.6",
    "webpack-dev-server": "^2.6.1"
  }
}
